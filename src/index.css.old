@tailwind base;
@tailwind components;
@tailwind utilities;

/* 阿里云ECS风格CSS变量系统 */
:root {
  /* 主色调 */
  --ali-primary: #1890FF;
  --ali-primary-hover: #40A9FF;
  --ali-primary-active: #096DD9;
  --ali-primary-light: #E6F7FF;
  
  /* 辅助色 */
  --ali-orange: #FF6A00;
  --ali-orange-hover: #FF8533;
  --ali-tech-blue: #1890FF;
  
  /* 状态色 */
  --ali-success: #52C41A;
  --ali-success-hover: #73D13D;
  --ali-warning: #FAAD14;
  --ali-warning-hover: #FFC53D;
  --ali-error: #FF4D4F;
  --ali-error-hover: #FF7875;
  
  /* 深色背景（左侧导航） */
  --ali-dark-bg: #001529;
  --ali-dark-hover: #112240;
  --ali-dark-active: #1890FF;
  
  /* 中性色 */
  --ali-text-primary: #262626;
  --ali-text-secondary: #8C8C8C;
  --ali-text-disabled: #BFBFBF;
  --ali-bg-gray: #F5F5F5;
  --ali-bg-light: #FAFAFA;
  --ali-border: #F0F0F0;
  --ali-border-dark: #D9D9D9;
  
  /* 卡片阴影 */
  --ali-card-shadow: 0 1px 4px rgba(0, 21, 41, 0.08);
  --ali-card-shadow-hover: 0 2px 8px rgba(0, 21, 41, 0.12);
  
  /* 字体 */
  --ali-font-family: 'PingFang SC', 'Microsoft YaHei', -apple-system, BlinkMacSystemFont, 'Segoe UI', 'Helvetica Neue', Arial, sans-serif;
  --ali-font-size-base: 14px;
  --ali-font-size-sm: 12px;
  --ali-font-size-lg: 16px;
  --ali-font-size-xl: 20px;
  --ali-line-height-base: 1.5715;
}

@layer base {
  * {
    border-color: rgb(229 231 235);
    margin: 0;
  }
  
  html {
    min-width: 320px;
    min-height: 100vh;
  }
  
  body {
    background-color: rgb(249 250 251);
    color: rgb(17 24 39);
    font-family: var(--ali-font-family);
    font-size: var(--ali-font-size-base);
    line-height: var(--ali-line-height-base);
    -webkit-font-smoothing: antialiased;
    -moz-osx-font-smoothing: grayscale;
    text-rendering: optimizeLegibility;
    font-feature-settings: 'kern' 1;
    min-width: 320px;
    min-height: 100vh;
  }
  
  h1, h2, h3, h4, h5, h6 {
    font-weight: 600;
    color: var(--ali-text-primary);
    letter-spacing: -0.02em;
  }
  
  h1 {
    font-size: var(--ali-font-size-xl);
    font-weight: 600;
  }
  
  h2 {
    font-size: var(--ali-font-size-lg);
    font-weight: 600;
  }
  
  p {
    line-height: 1.625;
    color: var(--ali-text-primary);
  }
}

#root {
  width: 100%;
  min-height: 100vh;
}
